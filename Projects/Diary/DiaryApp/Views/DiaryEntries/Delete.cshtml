@model DiaryEntry

@{
	ViewData["Title"] = "Delete Diary Entry";
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card">
				<div class="card-header bg-primary text-light">
					<h2>Delete Diary Entry</h2>
				</div>
				<div class="card-body">
					<form asp-action="Delete" method="post">
						@* <div asp-validation-summary="All" class="text-primary"></div> *@
						<div class="form-group my-3">
							<label asp-for="Title" class="form-label"></label>
							<input asp-for="Title" class="form-control" placeholder="Title" required />
							<span asp-validation-for="Title" class="text-danger"></span>
						</div>
						<div class="form-group my-3">
							<label asp-for="Content" class="form-label"></label>
							<input asp-for="Content" class="form-control" placeholder="Journal what you did" required row="5" />
							<span asp-validation-for="Content" class="text-danger"></span>
						</div>
						<div class="form-group my-3">
							<label asp-for="Created" class="form-label"></label>
							<input asp-for="Created" class="form-control" type="date" required />
							<span asp-validation-for="Created" class="text-danger"></span>
						</div>
						<div class="d-flex justify-content-between my-4">
							<button type="submit" class="btn btn-primary">Delete</button>
							<a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-danger">Cancel</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
